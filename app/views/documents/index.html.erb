<% selected_class = 'class=active'%>

<h1>Documents</h1>

<form action="<%= new_document_path %>">
  <button type="submit" class="btn btn-success">Create a new document</button>
</form>
<br />

<ul class="nav nav-tabs nav-justified" id="document_filter_buttons">
    <li role="presentation" <%= selected_class if @initial_document_filter == "your_documents" %>><%= link_to "Your documents", your_documents_path, method: :post, remote: true %></li>
    <li role="presentation" <%= selected_class if @initial_document_filter == "your_actions" %>><%= link_to "Your actions", your_actions_path, method: :post, remote: true %></li>
    <li role="presentation" <%= selected_class if @initial_document_filter == "all_documents" %>><%= link_to "All documents", all_documents_path, method: :post, remote: true %></li>
</ul>
<br />

<%= form_for :document, method: :put, remote: true do |f| %>
    <%= f.submit "Draft", class: "btn btn-medium", name: "status" %>
    <%= f.submit "For review", class: "btn btn-medium", name: "status" %>
    <%= f.submit "For approval", class: "btn btn-medium", name: "status" %>
    <%= f.submit "Approved", class: "btn btn-medium", name: "status" %>

    <br />
    <br />

    <%= f.submit "Send for review", class: "btn btn-medium", name: "submit" %>
    <%= f.submit "Send for approval", class: "btn btn-medium", name: "submit" %>
    <%= f.submit "Delete", class: "btn btn-medium", name: "submit" %>

    <%= render partial: 'list', locals: {documents: @documents} %>
<% end %>
