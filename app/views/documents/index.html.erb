<h1>Documents#index</h1>


<% if @documents.empty? %>
    There are no documents in this organisation.
<% else %>
    <%= form_for :document, method: :put do |f| %>
        <table class="table table-striped">
          <thead>
          <tr>
            <th>
              Document
            </th>
            <th>
              Created
            </th>
            <th>
              Updated
            </th>
            <th style="width: 20%;">
              <!-- Change status -->
            </th>
          </tr>
          </thead>
          <tbody>
          <% @documents.each do |d| %>
              <tr>
                <td>
                  <%= link_to d.title, document_path(d.id) %>
                </td>
                <td>
                  <%= d.created_at %>
                </td>
                <td>
                  <%= d.updated_at %>
                </td>
                <td>
                    placeholder
                </td>
              </tr>
          <% end %>
          </tbody>
        </table>
        <%= f.submit "Save", class: "btn btn-medium btn-inverse" %>
    <% end %>
<% end %>